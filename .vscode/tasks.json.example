{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Create Build Directory",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-E",
				"make_directory",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Configure CMake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",
				".."
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"Create Build Directory"
			],
			"problemMatcher": []
		},
		{
			"label": "Build Warzone",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				".",
				"--config",
				"Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Configure CMake"
			],
			"problemMatcher": [
				"$gcc",
				"$msCompile"
			]
		}
	]
}